      "typeVersion": 1.1,
      "position": [1800, 300]
    },
    {
      "parameters": {
        "jsCode": "// 构建爬取失败的错误数据\nconst configNode = $('配置参数').first().json;\nconst originalData = configNode.input;\nconst config = configNode.config;\n\nreturn {\n  json: {\n    success: false,\n    error: 'scrape_failed',\n    message: $json.error || '网页爬取失败',\n    retry_data: {\n      url: originalData.url,\n      dataset_id: originalData.dataset_id,\n      tags: originalData.tags || [],\n      source: originalData.source,\n      category: originalData.category\n    },\n    config: config\n  }\n};"
      },
      "id": "scrape-error-handler",
      "name": "爬取失败处理",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1360, 300]
    },
    {
      "parameters": {
        "jsCode": "// 构建上传失败的错误数据\nconst processData = $('处理爬取内容').first().json;\n\nreturn {\n  json: {\n    success: false,\n    error: 'upload_failed',\n    message: $json.message || '上传到 RagFlow 失败',\n    retry_data: {\n      url: processData.url,\n      dataset_id: processData.dataset_id,\n      tags: processData.tags || [],\n      source: processData.source,\n      content: processData.content,\n      filename: processData.filename\n    },\n    config: processData.config\n  }\n};"
      },
      "id": "upload-error-handler",
      "name": "上传失败处理",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [2020, 200]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"success\": false,\n  \"error\": \"upload_failed\",\n  \"message\": \"上传到 RagFlow 失败: {{ $json.message || '未知错误' }}\",\n  \"data\": {\n    \"url\": \"{{ $('处理爬取内容').first().json.url }}\",\n    \"title\": \"{{ $('处理爬取内容').first().json.title }}\"\n  }\n}",
        "options": {
