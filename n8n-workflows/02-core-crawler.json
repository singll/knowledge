    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"success\": true,\n  \"message\": \"文章已成功入库\",\n  \"data\": {\n    \"url\": \"{{ $('处理爬取内容').first().json.url }}\",\n    \"title\": \"{{ $('处理爬取内容').first().json.title }}\",\n    \"document_id\": \"{{ $json.data?.document_id || '' }}\",\n    \"dataset_id\": \"{{ $('处理爬取内容').first().json.dataset_id }}\",\n    \"content_length\": {{ $('处理爬取内容').first().json.metadata?.content_length || 0 }},\n    \"crawl_time\": \"{{ $('处理爬取内容').first().json.metadata?.crawl_time }}\"\n  }\n}",
        "options": {
