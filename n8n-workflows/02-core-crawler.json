    {
      "parameters": {
        "mode": "raw",
        "jsonOutput": "={\n  \"config\": {\n    \"KNOWLEDGE_MGMT_URL\": \"http://knowledge-backend:5000\",\n    \"FIRECRAWL_API_URL\": \"http://firecrawl:3002\",\n    \"N8N_WEBHOOK_URL\": \"http://n8n:5678\",\n    \"RAGFLOW_DATASET_ID_SECURITY\": \"YOUR_SECURITY_DATASET_ID\",\n    \"RAGFLOW_DATASET_ID_NEWS\": \"YOUR_NEWS_DATASET_ID\",\n    \"RAGFLOW_DATASET_ID_AI\": \"YOUR_AI_DATASET_ID\",\n    \"RAGFLOW_DATASET_ID_DEV\": \"YOUR_DEV_DATASET_ID\"\n  },\n  \"input\": {{ JSON.stringify($json.body || $json) }}\n}",
        "options": {}
      },
      "id": "config-node",
      "name": "配置参数",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [470, 300],
      "notesInFlow": true,
      "notes": "修改此节点中的配置值"
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-url",
              "leftValue": "={{ $json.input.url }}",
              "rightValue": "",
              "operator": {
                "type": "string",
                "operation": "notEmpty"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "validate-input",
      "name": "验证输入参数",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [690, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "={{ $('配置参数').item.json.config.FIRECRAWL_API_URL }}/v1/scrape",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"url\": \"{{ $('配置参数').item.json.input.url }}\",\n  \"formats\": [\"markdown\", \"html\"],\n  \"onlyMainContent\": true,\n  \"waitFor\": 3000,\n  \"timeout\": 30000,\n  \"removeBase64Images\": true,\n  \"blockAds\": true\n}",
        "options": {
          "response": {
            "response": {
              "responseFormat": "json"
            }
          },
          "timeout": 60000
        }
      },
      "id": "firecrawl-scrape",
      "name": "Firecrawl 爬取网页",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [920, 200],
      "credentials": {
        "httpHeaderAuth": {
          "id": "firecrawl-auth",
          "name": "Firecrawl API"
        }
      },
      "onError": "continueErrorOutput"
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-success",
              "leftValue": "={{ $json.success }}",
              "rightValue": true,
              "operator": {
                "type": "boolean",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-scrape-result",
      "name": "检查爬取结果",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1140, 200]
    },
    {
      "parameters": {
        "jsCode": "// 提取和处理爬取的内容\nconst input = $input.first().json;\nconst configNode = $('配置参数').first().json;\nconst originalData = configNode.input;\nconst config = configNode.config;\n\n// 从 Firecrawl 响应中提取数据\nconst data = input.data || {};\nconst metadata = data.metadata || {};\n\n// 生成文件名\nconst title = metadata.title || metadata.ogTitle || '未知标题';\nconst cleanTitle = title.replace(/[^a-zA-Z0-9\\u4e00-\\u9fa5\\s-]/g, '').substring(0, 100);\nconst timestamp = new Date().toISOString().replace(/[:.]/g, '-');\nconst filename = `${cleanTitle}_${timestamp}.md`;\n\n// 构建文档内容\nlet content = '';\n\n// 添加元数据头\ncontent += `# ${title}\\n\\n`;\ncontent += `> **来源**: ${originalData.url}\\n`;\ncontent += `> **抓取时间**: ${new Date().toLocaleString('zh-CN')}\\n`;\n\nif (metadata.author) {\n  content += `> **作者**: ${metadata.author}\\n`;\n}\nif (metadata.publishedTime) {\n  content += `> **发布时间**: ${metadata.publishedTime}\\n`;\n}\nif (metadata.description) {\n  content += `> **摘要**: ${metadata.description}\\n`;\n}\n\ncontent += '\\n---\\n\\n';\n\n// 添加正文内容\ncontent += data.markdown || data.content || '内容解析失败';\n\n// 添加来源标签\nconst sourceTags = originalData.tags || [];\nif (sourceTags.length > 0) {\n  content += `\\n\\n---\\n**标签**: ${sourceTags.join(', ')}`;\n}\n\n// 确定目标知识库\nlet datasetId = originalData.dataset_id;\nif (!datasetId) {\n  // 根据标签或来源自动选择知识库\n  const category = originalData.category || 'general';\n  const datasetMapping = {\n    'security': config.RAGFLOW_DATASET_ID_SECURITY,\n    'news': config.RAGFLOW_DATASET_ID_NEWS,\n    'ai': config.RAGFLOW_DATASET_ID_AI,\n    'dev': config.RAGFLOW_DATASET_ID_DEV,\n    'general': config.RAGFLOW_DATASET_ID_SECURITY\n  };\n  datasetId = datasetMapping[category] || datasetMapping['general'];\n}\n\nreturn {\n  json: {\n    url: originalData.url,\n    title: title,\n    filename: filename,\n    content: content,\n    dataset_id: datasetId,\n    source: originalData.source || 'manual',\n    tags: sourceTags,\n    config: config,\n    metadata: {\n      original_url: originalData.url,\n      crawl_time: new Date().toISOString(),\n      content_length: content.length,\n      title: title,\n      description: metadata.description,\n      author: metadata.author\n    }\n  }\n};"
      },
      "id": "process-content",
      "name": "处理爬取内容",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1360, 100]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "={{ $json.config.KNOWLEDGE_MGMT_URL }}/api/ragflow/upload/string",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"dataset_id\": \"{{ $json.dataset_id }}\",\n  \"content\": {{ JSON.stringify($json.content) }},\n  \"filename\": \"{{ $json.filename }}\",\n  \"parser_id\": \"naive\",\n  \"run\": \"1\",\n  \"wait_for_completion\": false\n}",
        "options": {
          "response": {
            "response": {
              "responseFormat": "json"
            }
          },
          "timeout": 30000
        }
      },
      "id": "upload-to-ragflow",
      "name": "上传到 RagFlow",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1580, 100],
      "onError": "continueErrorOutput"
